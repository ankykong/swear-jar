{
  "name": "swear-jar",
  "version": "1.0.0",
  "description": "Virtual swear jar with multi-user access and Plaid integration",
  "main": "api/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "vercel-build": "npm run install-all && npm run build",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "fintech",
    "plaid",
    "money",
    "swear-jar",
    "vercel"
  ],
  "author": "SwearJar Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "plaid": "^11.0.0",
    "uuid": "^9.0.1",
    "vercel": "^44.5.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
